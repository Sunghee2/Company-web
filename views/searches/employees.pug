  main.col-md-9.ml-sm-auto.px-4(role='main')
    .chartjs-size-monitor(style='position: absolute; left: 0px; top: 0px; right: 0px; bottom: 0px; overflow: visible;visibility: visible; z-index: -1;')
      .chartjs-size-monitor-expand(style='position:absolute;left:0;top:0;right:0;bottom:0;overflow:visible;visibility:visible;')
    .justify-content-between.flex-wrap.flex-md-nowrap.align-items-center.pt-3.pb-2.mb-3.border-bottom
      h1.h2.mt-3.mb-5 Search
      .row
        .col-sm-5.mb-3
          label(for='find-employee-number') Employee Number
          input#find-employee-number.form-control(type='text', placeholder='eg. 60100000')
        .col-sm-5.mb-3
          label(for='find-employee-name') Employee name
          input#find-employee-name.form-control(type='text', placeholder='eg. King')
        .col-sm-2.mt-2
          br
          a.btn.btn-outline-secondary(role='button') Search
      .mb-3
    h2 Result

    if employees.total > 0
      .small Total #{employees.total} employee(s)
      table.table
        thead
          tr
            th(scope='col') Employee Number
            th(scope='col') Name
            th(scope='col') Department
            th(scope='col') Phone Number
        tbody
          each employee in employees.docs //이 부분은 data넘어오는 것 보고 다시 수정하겠음.
            tr
              a(href='')
                th(scope='row')= employee.employee_number
                td= employee.name
                td= employee.department
                td= employee.phone_number
      