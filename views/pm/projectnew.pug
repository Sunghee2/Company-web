                    li.nav-item
                        a.nav-link.active(href='/pm')
                            svg.feather.feather-file-text(xmlns='http://www.w3.org/2000/svg', width='24', height='24', viewbox='0 0 24 24', fill='none', stroke='currentColor', stroke-width='2', stroke-linecap='round', stroke-linejoin='round')
                            path(d='M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z')
                            polyline(points='14 2 14 8 20 8')
                            line(x1='16', y1='13', x2='8', y2='13')
                            line(x1='16', y1='17', x2='8', y2='17')
                            polyline(points='10 9 9 9 8 9')
                            |                 PM page
                    li.nav-item
                        a.nav-link.active(href='/pm/client_evaluations')
                            svg.feather.feather-file-text(xmlns='http://www.w3.org/2000/svg', width='24', height='24', viewbox='0 0 24 24', fill='none', stroke='currentColor', stroke-width='2', stroke-linecap='round', stroke-linejoin='round')
                            path(d='M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z')
                            polyline(points='14 2 14 8 20 8')
                            line(x1='16', y1='13', x2='8', y2='13')
                            line(x1='16', y1='17', x2='8', y2='17')
                            polyline(points='10 9 9 9 8 9')
                            |                 Client evalutions
                    li.nav-item
                        a.nav-link.active(href='/pm/project_new')
                            svg.feather.feather-file-text(xmlns='http://www.w3.org/2000/svg', width='24', height='24', viewbox='0 0 24 24', fill='none', stroke='currentColor', stroke-width='2', stroke-linecap='round', stroke-linejoin='round')
                            path(d='M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z')
                            polyline(points='14 2 14 8 20 8')
                            line(x1='16', y1='13', x2='8', y2='13')
                            line(x1='16', y1='17', x2='8', y2='17')
                            polyline(points='10 9 9 9 8 9')
                            |                Project new


        .pt-5.pb-1.text-center
            h2 Register Project
            hr.mt-5.featurette-divider
            .col-md-12
            form.needs-validation(action='/projcets', method='POST')
                p  
                h4.mb-3 Project Info
                .mb-3
                label(for='name') Project Name
                input#name.form-control(type='text', placeholder='Project Name', name='name')
                .mb-3
                .row
                    .col-sm-6
                    label(for='rrn') Start Date
                    input#start_date.form-control(type='date', name='start_date')
                    .col-sm-6
                    label(for='rrn') End Date
                    input#end_date.form-control(type='date', name='end_date')
                .mb-3
                label(for='pm') PM number
                input#pm.form-control(type='text', name='pm', placeholder='PM Employee_numbers')
                .mb-3
                label(for='order') Order ID
                input#order.form-control(type='text', name='order', placeholder='Order ID')
                hr.featurette-divider
                .row
                .col-sm-5
                .col-sm-5
                .col-sm-2
                    button.btn.btn-primary.btn-lg.btn-block(type='submit') Register

