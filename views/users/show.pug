extends ../layout

block content
  block content
  .container.form-user-show
    .py-5.text-center
      h2 Profile
      p
    hr.featurette-divider
    .col-md-12
      h4.mb-3 Account
      form.needs-validation(action='/users', method='POST')
        .mb-3
          label(for='username') ID
          .input-group
            input.form-control(type='text', value='User Id (eg. abc@gmail.com)', name='id')
        .mb-3
          label(for='employee_number') Employee number
          .input-group
            input#password.form-control(type='text', value='Employee Number', name='employee_number')
        p Â 
        hr.featurette-divider
        h4.mb-3 Profile
        .row
          .col-md-6.mb-3
            label(for='firstName') First name
            input#firstName.form-control(type='text', value='Jean')
          .col-md-6.mb-3
            label(for='lastName') Last name
            input#lastName.form-control(type='text', value='Reno')
        .mb-3
          label(for='rrn') RRN
          input#rrn.form-control(type='text', value='Need to reconfirm... fixing', name='rrn')
          .col-md-6.mb-3
        label(for='department') Department
        .row
          .col-md-9
            .input-group
              input#department.form-control(type='text', value='Click find and search your department', name='department')
          .col-md-3
            button.btn.btn-primary.find-department(type='button') Find DeptNum
        .mb-3
          label(for='gender') Gender
          input#final-education.form-control(type='text', name='final_education', value='Graduated from Myongji University, Data Technology Track')
        .mb-3
          label(for='rrn') Final Education
          input#final-education.form-control(type='text', name='final_education',value='Graduated from Myongji University, Data Technology Track')
        .mb-3
          label(for='email')
            | Email 
          input#email.form-control(type='email', name='email',value='you@example.com')
          .invalid-feedback
            | Please enter a valid email address for shipping updates.
        .mb-3
          label(for='address2') Phone Number
          input#phone-number.form-control(type='text', value='eg. 01012345678', name='phone_number')
        hr.mb-4
    p
      a.btn.btn-outline-secondary(href='/users/') List
      | 
      a.btn.btn-outline-primary(href=`/users/${user._id}/edit`) Edit
      | 
      a.btn.btn-outline-danger.need-confirm-btn(href=`/users/${user._id}?_method=DELETE`) Delete
