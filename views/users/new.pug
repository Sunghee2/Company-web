extends ../layout

block content
  .container.form-signup
    .py-5.text-center
      h2 Register
      p
      p.lead Please read the following before registering.
      p
      p 1. Employee numbers are assigned at random.
      p 2. Please fill in all details.
      hr.featurette-divider
    .col-md-12
      h4.mb-3 Account
      form.needs-validation(action='/users', method='POST')
        .mb-3
          label(for='username') ID
          .input-group
            input.form-control(type='text', placeholder='User Id', name='id')
        .mb-3
          label(for='password') Password
          .input-group
            input#password.form-control(type='password', placeholder='Password', name='password')
        .mb-3
          label(for='password-confirmed') Password-Confirmed
          .input-group
            input#password-confirmed.form-control(type='password', placeholder='Password-Confirmed', name='password_confirmed')
        .mb-3
          label(for='employee_number') Employee number
          .input-group
            input#number.form-control(type='text', placeholder='Employee Number', name='employee_number')
        .mb-3
          label(for='employee_rrn') Employee RRN
          .input-group
            input#rrn.form-control(type='text', placeholder='Employee RRN', name='rrn')
        hr.featurette-divider
        .row
          .col-sm-5
          .col-sm-5
          .col-sm-2
            button.btn.btn-primary.btn-lg.btn-block(type='submit') Register
